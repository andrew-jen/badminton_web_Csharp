@model List<MemberSystemMVC.Models.Program>

@{
    ViewData["Title"] = "課程管理與取消";
}

<h2 class="text-center mb-4">已開課程列表</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center">
        您目前尚未開設任何課程。
    </div>
}
else
{
    <table class="table table-striped table-hover align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>課程ID</th>
                <th>場地名稱</th>
                <th>日期</th>
                <th>時段</th>
                <th>費用</th>
                <th>人數上限</th>
                <th>已報名</th>
                <th>推薦程度</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.VenueName</td>
                    <td>@item.ScheduleDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.TimeSlot</td>
                    <td>@item.Fee.ToString("C0")</td>
                    <td>@item.Capacity</td>
                    <td>@item.RegisteredCount</td>
                    <td>@item.RecommendationLevel</td>
                    <td>
                        <form asp-action="CoachCancel" asp-controller="Coach" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('確定要取消這堂課嗎？');">
                                取消
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="text-center mt-4">
    <a asp-action="Operating" asp-controller="Coach" class="btn btn-secondary">返回開課頁面</a>
</div>

