@model badminton_web.Models.ErrorViewModel

@{
    ViewData["Title"] = "發生錯誤";
}

<div class="container mt-5">
    <div class="alert alert-danger text-center">
        <h2 class="fw-bold">Oops! 發生錯誤 😢</h2>
        <p>抱歉，系統遇到問題，無法完成您的操作。</p>

        @if (Model.ShowRequestId)
        {
            <p>請提供此 Request ID 給管理員以便追蹤問題：</p>
            <p class="fw-bold text-monospace">@Model.RequestId</p>
        }

        <a href="~/"
           class="btn btn-primary mt-3">
            回首頁
        </a>
    </div>
</div>

